// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode",
        "hyprland/scratchpad"
    ],
    "modules-center": [
        //"hyprland/window"
        "custom/music"
    ],
    "modules-right": [
            "idle_inhibitor",
            "pulseaudio",
            "network",
            "power-profiles-daemon",
            "battery",
            "clock",
            "tray",
            "custom/power"
    ],

    "hyprland/window": {
        "separate-outputs": true
    },
    
     "hyprland/workspaces": {
         "on-click": "activate",
         "active-only": false,
         "all-outputs": true,
         "all-outputs": true,
         "warp-on-scroll": false,
         "format": "{name}",
     },

    "hyprland/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "idle_inhibitor": {
        "format": " {icon} ",
        "tooltip": true,
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "on-click-right": "hyprlock"
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    "custom/music": {
        "format": " üéµ {} ",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ title }} - {{ artist }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },

    "clock": {
        "timezone": "Europe/Amsterdam",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "Ôó¨ {:%d/%m/%Y}",
        "format": "Ôôè {:%H:%M}"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": " {icon} ",
        "format-charging": "ÔñÉ",
        "format-plugged": "ÔñÉ",
        "format-icons": ["ÔñÇ", "Ôïπ",  "Ôï∫", "Ôïª", "Ôïº", "ÔïΩ", "ÔïΩ", "Ôïæ", "Ôïø", "ÔñÄ", "ÔñÅ", "Ôï∏"]
    },

    "battery#bat2": {
        "bat": "BAT2"
    },

    "power-profiles-daemon": {
      "format": " {icon} ",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format": " {ifname} ",
        "format-wifi": " {essid} Ôá´ ",
        "format-ethernet": "Ôõø",
        "format-disconnected": " Disconnected ‚ö† ",
        "tooltip-format-wifi": " {essid} ({signalStrength}%) Ôá´ ",
        "tooltip-format-ethernet": " {ifname} ({ipaddr}/{cidr}) Ôûñ  ",
        "format-linked": " {ifname} (No IP) Ôûñ  ",
        "on-click": "nm-connection-editor"
    },

    "pulseaudio": {
        "format": " {volume}% {icon}  ",
        "format-bluetooth": " {volume}% {icon}Ôäî {format_source} ",
        "format-bluetooth-muted": " Ôö©  {icon} Ôäî {format_source} ",
        "format-muted": "Ôë¶",
        "format-source-muted": " ÔÑ± ",
        "format-icons": {
            "headphone": " ÔÄ• ",
            "hands-free": " Ôñê ",
            "headset": " Ôñê ",
            "phone": " ÔÇï ",
            "portable": " ÔÇï ",
            "car": " ÔÜπ ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/power": {
        "format"   : " ‚èª ",
        "tooltip"  : false,
	"on-click" : "~/.config/rofi/powermenu/type-1/powermenu.sh"
    }
}
